            <span>Quantity</span>
            <span>University student x 1</span>
            <hr />
        </div>
        <div class="sidebar-summary">
            <div class="total">
                <span>Total</span>
                <span>₱530.00</span>
            </div>
        </div>
    </div>
</div>

@* Payment Success Modal Markup *@
<div id="paymentSuccessModal" class="modal-overlay">
    <div class="modal-content">
        <button class="modal-close-button" onclick="closeModal()">&times;</button>
        <div class="modal-icon">
            <img src="https://via.placeholder.com/60x60/FFD700/000000?text=%F0%9F%8E%89" alt="Confetti Icon" />
        </div>
        <h3>Payment Successful!</h3>
        <a href="@Url.Action("Index", "Home")" class="modal-button">Go back to Home</a>
    </div>
</div>

<script>
    // JavaScript to handle showing/hiding the modal
    function showModal() {
        document.getElementById('paymentSuccessModal').classList.add('show');
    }

    function closeModal() {
        document.getElementById('paymentSuccessModal').classList.remove('show');
    }

    // Check if payment was successful on page load
    window.onload = function() {
        @if (ViewBag.PaymentSuccess != null && ViewBag.PaymentSuccess)
        {
            <text>
                showModal();
            </text>
        }

        // Optional: JavaScript to hide/show card form based on radio selection
        var creditDebitRadio = document.getElementById('creditDebit');
        var gCashRadio = document.getElementById('gCash');
        var cardDetailsForm = document.getElementById('cardDetailsForm');

        function toggleCardForm() {
            if (creditDebitRadio.checked) {
                cardDetailsForm.style.display = 'block';
            } else {
                cardDetailsForm.style.display = 'none';
            }
        }

        creditDebitRadio.addEventListener('change', toggleCardForm);
        gCashRadio.addEventListener('change', toggleCardForm);

        // Initial check
        toggleCardForm();
    };
</script>