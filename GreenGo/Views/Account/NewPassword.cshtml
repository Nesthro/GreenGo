@{
    ViewBag.Title = "New Password - GreenGo";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', 'Segoe UI', sans-serif;
            background: #ffffff;
            height: 100vh;
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }

        /* ===== MAIN CONTENT ===== */
        .main-content {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            background: #ffffff;
            padding: 80px 20px 40px 20px; /* top padding increased, bottom reduced */
        }

        .form-wrapper {
            width: 100%;
            max-width: 460px;
            background: #ffffff;
            border-radius: 10px;
            box-shadow: 0 0 12px rgba(0, 0, 0, 0.05);
            padding: 45px 40px 50px 40px;
        }

        .form-title {
            text-align: center;
            font-size: 28px;
            font-weight: 700;
            color: #0a2447;
            margin-bottom: 35px;
        }

        .form-group {
            margin-bottom: 22px;
        }

            .form-group label {
                display: block;
                margin-bottom: 8px;
                color: #333;
                font-weight: 500;
                font-size: 14px;
            }

            .form-group input {
                width: 100%;
                padding: 13px 15px;
                border: 1px solid #dcdcdc;
                border-radius: 25px;
                font-size: 14px;
                outline: none;
                transition: all 0.3s;
            }

                .form-group input:focus {
                    border-color: #8fb91c;
                }

        .btn-submit {
            width: 100%;
            padding: 13px;
            border: none;
            border-radius: 25px;
            font-size: 15px;
            font-weight: 600;
            background: #8fb91c;
            color: #fff;
            cursor: pointer;
            transition: 0.3s;
            margin-top: 10px;
        }

            .btn-submit:hover {
                background: #7da619;
            }

        /* ===== POPUP ===== */
        .popup-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.35);
            display: flex;
            justify-content: center;
            align-items: center;
            visibility: hidden;
            opacity: 0;
            transition: 0.3s ease;
        }

            .popup-overlay.active {
                visibility: visible;
                opacity: 1;
            }

        .popup-box {
            background: #fff;
            padding: 40px 50px;
            border-radius: 12px;
            box-shadow: 0 0 16px rgba(0, 0, 0, 0.15);
            text-align: center;
            width: 380px;
        }

            .popup-box i {
                font-size: 50px;
                color: #8fb91c;
                margin-bottom: 20px;
            }

            .popup-box h2 {
                font-size: 22px;
                color: #0a2447;
                margin-bottom: 10px;
            }

            .popup-box p {
                color: #555;
                font-size: 15px;
                margin-bottom: 25px;
            }

        .btn-back-login {
            display: inline-block;
            background: #8fb91c;
            color: white;
            padding: 12px 24px;
            border-radius: 25px;
            text-decoration: none;
            font-weight: 600;
            transition: 0.3s;
        }

            .btn-back-login:hover {
                background: #7da619;
            }
    </style>
</head>

<body>
    <div class="main-content">
        <div class="form-wrapper">
            <h1 class="form-title">Create New Password</h1>

            <form id="newPasswordForm">
                <div class="form-group">
                    <label for="newPassword">New Password</label>
                    <input type="password" id="newPassword" placeholder="Enter new password" />
                </div>

                <div class="form-group">
                    <label for="confirmPassword">Confirm Password</label>
                    <input type="password" id="confirmPassword" placeholder="Re-enter new password" />
                </div>

                <button type="button" class="btn-submit" onclick="showPopup()">Update Password</button>
            </form>
        </div>
    </div>

    <!-- ===== POPUP ===== -->
    <div class="popup-overlay" id="popupOverlay">
        <div class="popup-box">
            <i class="fa-solid fa-circle-check"></i>
            <h2>Password Updated!</h2>
            <p>Your password has been changed successfully.</p>
            <a href="@Url.Action("Login", "Account")" class="btn-back-login">Back to Login</a>
        </div>
    </div>

    <script>
        function showPopup() {
            const newPassword = document.getElementById("newPassword").value.trim();
            const confirmPassword = document.getElementById("confirmPassword").value.trim();

            // Password must be at least 8 characters, include 1 uppercase and 1 number
            const passwordPattern = /^(?=.*[A-Z])(?=.*\d).{8,}$/;

            // Validation checks
            if (!passwordPattern.test(newPassword)) {
                alert("Password must be at least 8 characters long, include one uppercase letter and one number.");
                return;
            }

            if (newPassword !== confirmPassword) {
                alert("Passwords do not match. Please re-enter.");
                return;
            }

            // Show popup only if validation passes
            document.getElementById("popupOverlay").classList.add("active");
        }
    </script>

</body>
</html>