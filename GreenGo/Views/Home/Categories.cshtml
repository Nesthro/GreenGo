@{
    ViewBag.Title = "Explore Museums - GreenGo";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', 'Segoe UI', sans-serif;
            background: #ffffff;
        }

        /* ===== HEADER (Same as Home) ===== */
        .header {
            background: #fff;
            padding: 15px 60px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 1px 4px rgba(0, 0, 0, 0.05);
        }

        .left-section {
            display: flex;
            align-items: center;
            gap: 25px;
        }

        .logo-section {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .logo {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            object-fit: cover;
        }

        .logo-text {
            font-size: 24px;
            font-weight: 700;
            color: #0a2447;
        }

        .search-bar {
            display: flex;
            align-items: center;
            background: #f0f0f0;
            border-radius: 25px;
            padding: 8px 18px;
            width: 320px;
            gap: 10px;
        }

            .search-bar input {
                border: none;
                background: transparent;
                outline: none;
                width: 100%;
                color: #333;
                font-size: 14px;
            }

        .search-icon {
            color: #777;
        }

        .nav-menu {
            display: flex;
            gap: 28px;
            align-items: center;
        }

        .nav-link {
            text-decoration: none;
            color: #444;
            font-size: 15px;
            transition: color 0.3s;
        }

            .nav-link:hover {
                color: #8fb91c;
            }

        .btn-signup-header {
            border: 1.5px solid #8fb91c;
            color: #8fb91c;
            background: #fff;
            padding: 8px 22px;
            border-radius: 25px;
            font-weight: 600;
            font-size: 15px;
            text-decoration: none;
            transition: 0.3s;
        }

            .btn-signup-header:hover {
                background: #8fb91c;
                color: #fff;
            }

        .btn-login-header {
            background: #8fb91c;
            color: white;
            padding: 8px 24px;
            border-radius: 25px;
            text-decoration: none;
            font-weight: 600;
            font-size: 15px;
            transition: 0.3s;
        }

            .btn-login-header:hover {
                background: #7da619;
            }

        /* ===== MAIN CONTENT ===== */
        .main-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 40px 60px;
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

        .page-title {
            font-size: 32px;
            font-weight: 700;
            color: #0a2447;
        }

        .sort-section {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .sort-label {
            font-size: 14px;
            color: #666;
        }

        .sort-dropdown {
            padding: 8px 16px;
            border: 1px solid #ddd;
            border-radius: 6px;
            background: #8fb91c;
            color: white;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            outline: none;
        }

        .content-wrapper {
            display: flex;
            gap: 30px;
        }

        /* ===== SIDEBAR ===== */
        .sidebar {
            width: 240px;
            flex-shrink: 0;
        }

        .filter-section {
            background: white;
            border-radius: 10px;
            padding: 20px 15px;
            margin-bottom: 20px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
            overflow: visible;
        }

        .filter-title {
            font-size: 16px;
            font-weight: 700;
            color: #0a2447;
            margin-bottom: 16px;
        }

        .filter-option {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 12px;
            cursor: pointer;
        }

            .filter-option input[type="checkbox"] {
                width: 18px;
                height: 18px;
                cursor: pointer;
            }

            .filter-option label {
                font-size: 14px;
                color: #444;
                cursor: pointer;
            }

        .see-more-btn {
            color: #8fb91c;
            font-size: 14px;
            font-weight: 600;
            background: none;
            border: none;
            cursor: pointer;
            padding: 0;
            margin-top: 8px;
        }

            .see-more-btn:hover {
                text-decoration: underline;
            }

        .price-inputs {
            display: flex;
            gap: 10px;
            margin-top: 12px;
            width: 100%; /* Add this to constrain the width */
            flex-wrap: wrap; /* Optional: if inputs don't fit, move to next line instead of overflowing */
        }


        .price-input {
            flex: 1 1 0; /* Ensures inputs grow evenly */
            min-width: 0; /* Prevents overflow */
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 6px;
            font-size: 14px;
            outline: none;
            box-sizing: border-box; /* Ensure padding doesn't expand the box */
        }


            .price-input:focus {
                border-color: #8fb91c;
            }

        .rating-option {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 12px;
            cursor: pointer;
        }

            .rating-option input[type="radio"] {
                width: 16px;
                height: 16px;
                cursor: pointer;
            }

        .rating-stars {
            color: #ffc107;
            font-size: 14px;
        }

        /* ===== LISTINGS ===== */
        .listings {
            flex: 1;
        }

        .museum-card {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            margin-bottom: 20px;
            display: flex;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
            transition: all 0.3s;
        }

            .museum-card:hover {
                box-shadow: 0 4px 20px rgba(0, 0, 0, 0.12);
                transform: translateY(-2px);
            }

        .museum-image {
            width: 280px;
            height: 200px;
            object-fit: cover;
            flex-shrink: 0;
        }

        .museum-content {
            padding: 20px 25px;
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .museum-location {
            font-size: 13px;
            color: #888;
            margin-bottom: 8px;
        }

        .museum-name {
            font-size: 20px;
            font-weight: 700;
            color: #0a2447;
            margin-bottom: 8px;
        }

        .museum-rating {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 12px;
        }

        .stars {
            color: #ffc107;
            font-size: 14px;
        }

        .rating-text {
            font-size: 14px;
            color: #666;
        }

        .museum-description {
            font-size: 14px;
            color: #666;
            line-height: 1.6;
            margin-bottom: 16px;
        }

        .museum-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .price-tag {
            font-size: 14px;
            color: #666;
        }

        .view-details-btn {
            padding: 10px 24px;
            background: white;
            color: #8fb91c;
            border: 1.5px solid #8fb91c;
            border-radius: 6px;
            font-weight: 600;
            font-size: 14px;
            cursor: pointer;
            transition: 0.3s;
        }

            .view-details-btn:hover {
                background: #8fb91c;
                color: white;
            }

        /* ===== PAGINATION ===== */
        .pagination {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 8px;
            margin-top: 40px;
        }

        .page-btn {
            width: 36px;
            height: 36px;
            border: 1px solid #ddd;
            background: white;
            border-radius: 6px;
            font-size: 14px;
            font-weight: 600;
            color: #444;
            cursor: pointer;
            transition: 0.3s;
        }

            .page-btn:hover {
                background: #f5f5f5;
            }

            .page-btn.active {
                background: #8fb91c;
                color: white;
                border-color: #8fb91c;
            }

        .page-info {
            font-size: 14px;
            color: #666;
            margin-top: 12px;
            text-align: center;
        }

        /* ===== FOOTER (Same as Home) ===== */
        .footer {
            background: #5a7a2a;
            color: white;
            padding: 50px 60px 25px;
            margin-top: 55px;
        }

        .footer-content {
            max-width: 1280px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: 2fr 1fr 1fr 2fr;
            gap: 50px;
            padding-bottom: 30px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }

        ::placeholder {
            color: #bfbfbf;
            opacity: 1;
        }

        .footer-section h3 {
            font-size: 18px;
            margin-bottom: 20px;
            font-weight: 600;
        }

        .footer-section p {
            font-size: 14px;
            color: rgba(255, 255, 255, 0.85);
            line-height: 1.6;
        }

        .footer-links {
            list-style: none;
        }

            .footer-links li {
                margin-bottom: 12px;
            }

            .footer-links a {
                color: rgba(255, 255, 255, 0.85);
                text-decoration: none;
                font-size: 14px;
                transition: 0.3s;
            }

                .footer-links a:hover {
                    color: #fff;
                    padding-left: 5px;
                }

        .newsletter-input {
            display: flex;
            margin-top: 16px;
        }

            .newsletter-input input {
                flex: 1;
                padding: 12px 18px;
                border: none;
                border-radius: 6px 0 0 6px;
                outline: none;
                font-size: 14px;
            }

            .newsletter-input button {
                padding: 12px 28px;
                background: #8fb91c;
                color: white;
                border: none;
                border-radius: 0 6px 6px 0;
                cursor: pointer;
                font-weight: 600;
                font-size: 14px;
                transition: 0.3s;
            }

                .newsletter-input button:hover {
                    background: #7da619;
                }

        .social-icons {
            display: flex;
            gap: 12px;
            margin-top: 20px;
        }

        .social-icon {
            width: 36px;
            height: 36px;
            background: rgba(255, 255, 255, 0.15);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: 0.3s;
        }

            .social-icon:hover {
                background: rgba(255, 255, 255, 0.25);
                transform: translateY(-2px);
            }
    </style>
</head>
<body>
    <!-- Header (Same as Home) -->
    <div class="header">
        <div class="left-section">
            <div class="logo-section">
                <img src="~/Content/Images/logo.jpg" alt="GreenGo Logo" class="logo" />
                <span class="logo-text">GreenGo</span>
            </div>
            <div class="search-bar">
                <input type="text" placeholder="Search destinations or activities" />
                <i class="fa-solid fa-magnifying-glass search-icon"></i>
            </div>
        </div>
        <div class="nav-menu">
            <a href="@Url.Action("Index", "Home")" class="nav-link">Home</a>
            <a href="@Url.Action("Categories", "Home")" class="nav-link">Categories</a>
            <a href="@Url.Action("About", "Home")" class="nav-link">About Us</a>
            <a href="@Url.Action("Contact", "Home")" class="nav-link">Contact Us</a>
            <a href="@Url.Action("Tips", "Home")" class="nav-link">Tips</a>
            <a href="@Url.Action("Register", "Account")" class="btn-signup-header">Sign Up</a>
            <a href="@Url.Action("Login", "Account")" class="btn-login-header">Log In</a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-container">
        <div class="page-header">
            <h1 class="page-title">Explore all Museum</h1>
            <div class="sort-section">
                <span class="sort-label">Sort by</span>
                <select class="sort-dropdown">
                    <option>Featured</option>
                    <option>Price: Low to High</option>
                    <option>Price: High to Low</option>
                    <option>Rating</option>
                    <option>Popularity</option>
                </select>
            </div>
        </div>

        <div class="content-wrapper">
            <!-- Sidebar Filters -->
            <aside class="sidebar">
                <div class="filter-section">
                    <h3 class="filter-title">Categories</h3>
                    <div class="filter-option">
                        <input type="checkbox" id="parks" />
                        <label for="parks">Parks</label>
                    </div>
                    <div class="filter-option">
                        <input type="checkbox" id="museums" checked />
                        <label for="museums">Museums</label>
                    </div>
                </div>

                <div class="filter-section">
                    <h3 class="filter-title">Location</h3>
                    <div class="filter-option">
                        <input type="checkbox" id="caloocan" />
                        <label for="caloocan">Caloocan</label>
                    </div>
                    <div class="filter-option">
                        <input type="checkbox" id="las-pinas" />
                        <label for="las-pinas">Las Piñas</label>
                    </div>
                    <div class="filter-option">
                        <input type="checkbox" id="makati" />
                        <label for="makati">Makati</label>
                    </div>
                    <div class="filter-option">
                        <input type="checkbox" id="malabon" />
                        <label for="malabon">Malabon</label>
                    </div>
                    <div class="filter-option">
                        <input type="checkbox" id="mandaluyong" />
                        <label for="mandaluyong">Mandaluyong</label>
                    </div>
                    <div class="filter-option">
                        <input type="checkbox" id="manila" />
                        <label for="manila">Manila</label>
                    </div>
                    <button class="see-more-btn">See More</button>
                </div>

                <div class="filter-section">
                    <h3 class="filter-title">Price Range</h3>
                    <div class="price-inputs">
                        <input type="number" class="price-input" placeholder="Min ₱" />
                        <input type="number" class="price-input" placeholder="Max ₱" />
                    </div>
                </div>

                <div class="filter-section">
                    <h3 class="filter-title">Rating</h3>
                    <div class="rating-option">
                        <input type="radio" name="rating" id="rating-all" checked />
                        <label for="rating-all">All</label>
                    </div>
                    <div class="rating-option">
                        <input type="radio" name="rating" id="rating-5" />
                        <label for="rating-5">
                            <span class="rating-stars">★★★★★</span>
                        </label>
                    </div>
                    <div class="rating-option">
                        <input type="radio" name="rating" id="rating-4" />
                        <label for="rating-4">
                            <span class="rating-stars">★★★★☆</span> & up
                        </label>
                    </div>
                    <div class="rating-option">
                        <input type="radio" name="rating" id="rating-3" />
                        <label for="rating-3">
                            <span class="rating-stars">★★★☆☆</span> & up
                        </label>
                    </div>
                </div>
            </aside>

            <!-- Museum Listings -->
            <div class="listings">
                <div class="museum-card">
                    <img src="~/Content/Images/national-museum.jpg" alt="National Museum of Fine Arts" class="museum-image" />
                    <div class="museum-content">
                        <div>
                            <div class="museum-location">Metro Manila, Manila</div>
                            <h3 class="museum-name">National Museum of Fine Arts</h3>
                            <div class="museum-rating">
                                <span class="stars">★★★★★</span>
                                <span class="rating-text">4.8 (508)</span>
                            </div>
                            <p class="museum-description">The National Museum of Fine Arts is home to 29 galleries and history exhibitions.</p>
                        </div>
                        <div class="museum-footer">
                            <div class="price-tag">Free Entrance</div>
                            <button class="view-details-btn" onclick="location.href='@Url.Action("NationalMuseum", "MuseumDesc")'">View Details</button>

                        </div>
                    </div>
                </div>

                <div class="museum-card">
                    <img src="~/Content/Images/yuchengco-museum.jpg" alt="Yuchengco Museum" class="museum-image" />
                    <div class="museum-content">
                        <div>
                            <div class="museum-location">Makati City, Metro Manila</div>
                            <h3 class="museum-name">Yuchengco Museum</h3>
                            <div class="museum-rating">
                                <span class="stars">★★★★★</span>
                                <span class="rating-text">4.8 (508)</span>
                            </div>
                            <p class="museum-description">A fresh nature park built along the La Mesa Watershed, offering a peaceful forest escape inside the city.</p>
                        </div>
                        <div class="museum-footer">
                            <div class="price-tag">₱200</div>
                            <button class="view-details-btn">View Details</button>
                        </div>
                    </div>
                </div>

                <div class="museum-card">
                    <img src="~/Content/Images/arroceros-forest.jpg" alt="Arroceros Forest Park" class="museum-image" />
                    <div class="museum-content">
                        <div>
                            <div class="museum-location">Ermita, Metro Manila</div>
                            <h3 class="museum-name">Arroceros Forest Park</h3>
                            <div class="museum-rating">
                                <span class="stars">★★★★★</span>
                                <span class="rating-text">4.8 (508)</span>
                            </div>
                            <p class="museum-description">A hidden urban forest known as Manila's 'Last Lung', providing a green and quiet walking paths.</p>
                        </div>
                        <div class="museum-footer">
                            <div class="price-tag">Free Entrance</div>

                            <a href="@Url.Action("Arroceros", "ParksDesc")" class="view-details-btn">View Details</a>


                        </div>
                    </div>
                </div>

                <!-- Pagination -->
                <div class="pagination">
                    <button class="page-btn active">1</button>
                    <button class="page-btn">2</button>
                    <button class="page-btn">3</button>
                    <button class="page-btn">4</button>
                    <span>...</span>
                    <button class="page-btn">20</button>
                </div>
                <div class="page-info">Showing results 1-58 of 1,455</div>
            </div>
        </div>
    </div>

    <!-- Footer (Same as Home) -->
    <div class="footer">
        <div class="footer-content">
            <div class="footer-section">
                <h3>Company</h3>
                <p>Travel help companies manage payments easily</p>
                <div class="social-icons">
                    <div class="social-icon">in</div>
                    <div class="social-icon">IG</div>
                    <div class="social-icon">tw</div>
                    <div class="social-icon">yt</div>
                </div>
            </div>
            <div class="footer-section">
                <h3>Company</h3>
                <ul class="footer-links">
                    <li><a href="#">About Us</a></li>
                    <li><a href="#">Careers</a></li>
                    <li><a href="#">Sustainability</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h3>Destinations</h3>
                <ul class="footer-links">
                    <li><a href="#">Manila</a></li>
                    <li><a href="#">Makati City</a></li>
                    <li><a href="#">Quezon City</a></li>
                    <li><a href="#">Taguig</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h3>Join Our Newsletter</h3>
                <div class="newsletter-input">
                    <input type="email" placeholder="Your email address" />
                    <button>Subscribe</button>
                </div>
                <p style="margin-top: 12px; font-size: 12px;">* We'll send you weekly updates for your better tour packages.</p>
            </div>
        </div>
    </div>
</body>
</html>