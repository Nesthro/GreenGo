@{
    ViewBag.Title = "Tips - GreenGo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Poppins', sans-serif;
    }

    .tips-page {
        background-color: #fff;
    }

    /* Hero Section */
    .hero-section {
        background-color: #e8f3d6;
        padding: 80px 20px;
    }

    .hero-content {
        max-width: 1100px;
        margin: auto;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 60px;
        flex-wrap: wrap;
    }

    .hero-text {
        flex: 1;
        min-width: 320px;
    }

    .hero-text h1 {
        font-size: 36px;
        font-weight: 700;
        color: #2d3e1f;
        line-height: 1.3;
        margin-bottom: 20px;
    }

    .hero-text p {
        color: #555;
        font-size: 15px;
        line-height: 1.6;
        max-width: 480px;
    }

    .hero-image {
        flex: 1;
        min-width: 280px;
        text-align: center;
    }

    .hero-image img {
        width: 80%;
        max-width: 380px;
    }

    /* Tips Section */
    .tips-section {
        padding: 70px 20px;
        background-color: #f8faf3;
    }

    .tips-container {
        max-width: 1100px;
        margin: auto;
    }

    .tips-header {
        text-align: center;
        margin-bottom: 50px;
    }

    .tips-header h2 {
        font-size: 26px;
        font-weight: 600;
        color: #2d3e1f;
        display: inline-flex;
        align-items: center;
        gap: 10px;
    }

    .tips-header i {
        color: #a6c437;
        font-size: 24px;
    }

    /* Tips Grid */
    .tips-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 30px 25px;
        max-width: 950px;
        margin: 0 auto;
    }



    .tip-card {
        background-color: #fff;
        border-radius: 12px;
        padding: 30px 25px;
        text-align: center;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .tip-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .tip-card img {
        width: 60px;
        height: 60px;
        margin-bottom: 20px;
        object-fit: contain;
    }

    .tip-card h4 {
        color: #2d3e1f;
        font-weight: 600;
        font-size: 16px;
        margin-bottom: 12px;
        line-height: 1.4;
    }

    .tip-card p {
        color: #666;
        font-size: 14px;
        line-height: 1.6;
        margin: 0;
    }

    /* Footer */
    .tips-footer {
        background-color: #4a5d3a;
        color: white;
        text-align: center;
        padding: 25px 20px;
    }

    .tips-footer p {
        margin: 0;
        font-size: 14px;
    }
</style>

<main class="tips-page">
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-content">
            <div class="hero-text">
                <h1>
                    Travel Responsibly —<br />
                    Together, Let's Make<br />
                    Every Trip Greener and<br />
                    Kinder to the Planet.
                </h1>
                <p>
                    Discover how small changes in your travel habits can make a big difference
                    for the environment and our NCR community.
                </p>
            </div>

            <div class="hero-image">
                <img src="~/Content/images/bike-illustration.png" alt="Cyclist">
            </div>
        </div>
    </section>

    <!-- Sustainable Travel Tips -->
    <section class="tips-section">
        <div class="tips-container">
            <div class="tips-header">
                <h2>
                    <i class="fa fa-leaf"></i> Sustainable Travel Tips
                </h2>
            </div>

            <div class="tips-grid">
                <!-- Tip 1 -->
                <div class="tip-card">
                    <img src="~/Content/images/plan-icon.png" alt="Plan Smart">
                    <h4>Plan Smart and Choose Local</h4>
                    <p>
                        Explore destinations nearby to reduce travel time and costs while discovering NCR's hidden gems.
                    </p>
                </div>

                <!-- Tip 2 -->
                <div class="tip-card">
                    <img src="~/Content/images/shared-ride-icon.png" alt="Shared Rides">
                    <h4>Choose Smart and Shared Rides</h4>
                    <p>
                        Book carpooling or shared transport to save energy, reduce traffic and make travelling easier.
                    </p>
                </div>

                <!-- Tip 3 -->
                <div class="tip-card">
                    <img src="~/Content/images/reusable-icon.png" alt="Bring Reusables">
                    <h4>Bring Reusables and Reduce Waste</h4>
                    <p>
                        Always carry your own water bottle, utensils, and eco-bag — small habits create a cleaner NCR.
                    </p>
                </div>

                <!-- Tip 4 -->
                <div class="tip-card">
                    <img src="~/Content/images/nature-icon.png" alt="Respect Nature">
                    <h4>Respect Nature and Culture</h4>
                    <p>
                        Follow park rules, respect traditions, and avoid damaging natural or cultural sites.
                    </p>
                </div>

                <!-- Tip 5 -->
                <div class="tip-card">
                    <img src="~/Content/images/energy-icon.png" alt="Conserve Energy">
                    <h4>Conserve Energy and Water</h4>
                    <p>
                        Turn off taps, lights, and air-conditioning when not needed, even when on vacation..ssss
                    </p>
                </div>

                <!-- Tip 6 -->
                <div class="tip-card">
                    <img src="~/Content/images/leave-icon.png" alt="Leave No Trace">
                    <h4>Leave No Trace</h4>
                    <p>
                        Take only pictures, leave only footprints. Keep every destination clean and beautiful.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="tips-footer">
        <p>© 2025 GreenGo NCR - Eco Travel Hub</p>
    </footer>
</main>