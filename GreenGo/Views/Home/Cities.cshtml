    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            background-color: #f8f8f8;
        }

        .top-attractions-section {
            padding: 20px 5%;
            max-width: 1300px;
            margin: 0 auto;
        }

        .page-title {
            font-size: 2em;
            font-weight: bold;
            color: #333;
            margin-bottom: 20px;
        }

        .header-controls-row {
            display: flex;
            flex-direction: column;
            margin-bottom: 30px;
        }

        .controls-group {
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: flex-start;
            gap: 0;
        }

        .filter-pills, .sort-dropdown {
            display: none;
        }

        .attractions-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 20px;
        }

        .attraction-card {
            background-color: white;
            border: 1px solid #eee;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
            cursor: pointer;
            transform: translateY(0);
            text-decoration: none;
            color: inherit;
            display: block;
        }

            .attraction-card:hover {
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
                transform: translateY(-6px);
            }

        .card-image-container {
            height: 180px;
            overflow: hidden;
            position: relative;
            background-color: #e0e0e0; /* Fallback color if image doesn't load */
        }

        .card-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
            transition: transform 0.4s ease;
        }

        .attraction-card:hover .card-image {
            transform: scale(1.08);
        }

        .card-details {
            padding: 15px;
            transition: background-color 0.3s ease;
        }

        .attraction-card:hover .card-details {
            background-color: #f9f9f9;
        }

        .card-location {
            font-size: 0.8em;
            color: #666;
            margin-bottom: 5px;
        }

        .card-title {
            font-size: 1.1em;
            font-weight: 600;
            color: #333;
            margin-bottom: 8px;
            line-height: 1.2;
        }

        .card-stats {
            font-weight: bold;
            color: #6C9A4B;
            font-size: 1em;
        }

        .card-rating, .card-price, .card-location {
            display: none;
        }
    </style>

</head>
