    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            background-color: #f8f8f8;
        }

        .top-attractions-section {
            padding: 20px 5%;
            max-width: 1300px;
            margin: 0 auto;
        }

        .page-title {
            font-size: 2em;
            font-weight: bold;
            color: #333;
            margin-bottom: 20px;
        }

        .header-controls-row {
            display: flex;
            flex-direction: column;
            margin-bottom: 30px;
        }

        .controls-group {
            /* flex-direction changed to column for city list page since controls are removed */
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: flex-start;
            gap: 0;
        }

        /* --- Filter Pills (Removed, but keeping class for minimal style changes) --- */
        .filter-pills, .sort-dropdown {
            display: none; /* Hide controls not needed for a city list */
        }

        /* --- Attractions Grid (UPDATED to 4x4 layout for 16 cities) --- */
        .attractions-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 20px;
        }

        /* --- Attraction Card (Now a City Card) --- */
        .attraction-card {
            background-color: white;
            border: 1px solid #eee;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
            cursor: pointer;
            transform: translateY(0);
        }

            .attraction-card:hover {
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
                transform: translateY(-6px);
            }

        .card-image-container {
            height: 180px;
            overflow: hidden;
            position: relative;
        }

        .card-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
            transition: transform 0.4s ease;
        }

        .attraction-card:hover .card-image {
            transform: scale(1.08);
        }

        .card-details {
            padding: 15px;
            transition: background-color 0.3s ease;
        }

        .attraction-card:hover .card-details {
            background-color: #f9f9f9;
        }

        .card-location {
            font-size: 0.8em;
            color: #666;
            margin-bottom: 5px;
        }

        /* City Title is now primary, no location needed */
        .card-title {
            font-size: 1.1em;
            font-weight: 600;
            color: #333;
            margin-bottom: 8px;
            line-height: 1.2;
        }

        /* Replacing price/rating with tours count */
        .card-stats {
            font-weight: bold;
            color: #6C9A4B;
            font-size: 1em;
        }

        .card-rating, .card-price, .card-location {
            display: none; /* Hide museum-specific elements */
        }
    </style>

