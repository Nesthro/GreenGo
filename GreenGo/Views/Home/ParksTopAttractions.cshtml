            { name: "Filinvest City Central Park", location: "Muntinlupa", rating: 4.8, reviews: 243, price: "Free entrance", image: "https://images.unsplash.com/photo-1560493676-04071c5f467b?w=400&h=300&fit=crop" },
            { name: "People's Park Valenzuela", location: "Valenzuela", rating: 4.8, reviews: 243, price: "Free entrance", image: "https://images.unsplash.com/photo-1585320806297-9794b3e4eeae?w=400&h=300&fit=crop" },

            { name: "Wawang Pulo Park", location: "Valenzuela", rating: 4.8, reviews: 243, price: "Free entrance", image: "https://images.unsplash.com/photo-1519331379826-f10be5486c6f?w=400&h=300&fit=crop" }
        ];

        function renderCards() {
            const grid = document.getElementById('cardsGrid');
            grid.innerHTML = parks.map(park => `
                    <div class="card">
                        <img src="${park.image}" alt="${park.name}" class="card-image">
                        <div class="card-content">
                            <div class="location">${park.location}</div>
                            <div class="card-title">${park.name}</div>
                            <div class="rating">
                                <span class="stars">★★★★★</span>
                                <span class="rating-text">${park.rating} (${park.reviews})</span>
                            </div>
                            <div class="price ${park.price === 'Free entrance' ? 'free-tag' : ''}">${park.price}</div>
                        </div>
                    </div>
                `).join('');
        }

        renderCards();
    </script>
</body>
</html>