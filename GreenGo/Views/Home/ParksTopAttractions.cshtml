            { name: "Kasalikasan Garden Park", location: "Taguig (BGC)", rating: 4.8, reviews: 243, price: "Free entrance", image: "https://images.unsplash.com/photo-1519331379826-f10be5486c6f?w=400&h=300&fit=crop" },
