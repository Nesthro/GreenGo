@{
    ViewBag.Title = "Contact Us - GreenGo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="contact-section" style="font-family: 'Poppins', sans-serif;">
    <div class="container" style="text-align: center; padding: 60px 0;">
        <h2 style="font-size: 32px; font-weight: 600; color: #000;">Contact Us</h2>
        <p style="color: #555; margin-top: 5px;">Any question or remarks? Just write us a message!</p>

        <div style="
            background-color: #A6C437;
            border-radius: 12px;
            width: 360px;
            margin: 40px auto;
            padding: 40px 30px;
            text-align: left;
            color: #fff;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            position: relative;
        ">
            <h3 style="font-size: 18px; margin-bottom: 10px; font-weight: 600;">Contact Information</h3>
            <p style="color: #e7e7e7; margin-bottom: 30px;">Say something to start a live chat!</p>

            <div style="margin-bottom: 15px;">
                <i class="fa fa-phone" style="margin-right: 10px;"></i> +1079 3456 789
            </div>

            <div style="margin-bottom: 15px;">
                <i class="fa fa-envelope" style="margin-right: 10px;"></i> greengo@gmail.com
            </div>

            <div style="margin-bottom: 25px;">
                <i class="fa fa-map-marker" style="margin-right: 10px;"></i> 673 Quirino Hwy, Novaliches, Quezon City, Metro Manila
            </div>

            <div style="margin-top: 30px;">
                <a href="#" style="color: white; margin-right: 10px;"><i class="fa fa-facebook"></i></a>
                <a href="#" style="color: white; margin-right: 10px;"><i class="fa fa-twitter"></i></a>
                <a href="#" style="color: white; margin-right: 10px;"><i class="fa fa-instagram"></i></a>
                <a href="#" style="color: white;"><i class="fa fa-linkedin"></i></a>
            </div>

            <div style="
                position: absolute;
                bottom: -20px;
                right: -20px;
                background: radial-gradient(circle at center, #6A8C24 60%, #3E5C1C 100%);
                width: 120px;
                height: 120px;
                border-radius: 50%;
                z-index: -1;
            "></div>
        </div>
    </div>

    <footer style="background-color: #3E5C1C; color: white; padding: 50px 0;">
        <div style="display: flex; justify-content: space-around; flex-wrap: wrap; max-width: 1100px; margin: auto;">
            <div style="width: 220px;">
                <p style="font-size: 14px;">Travel helps companies manage payments easily.</p>
                <div style="margin-top: 15px;">
                    <a href="#" style="color: white; margin-right: 10px;"><i class="fa fa-linkedin"></i></a>
                    <a href="#" style="color: white; margin-right: 10px;"><i class="fa fa-facebook"></i></a>
                    <a href="#" style="color: white; margin-right: 10px;"><i class="fa fa-twitter"></i></a>
                    <a href="#" style="color: white;"><i class="fa fa-instagram"></i></a>
                </div>
            </div>

            <div>
                <h4 style="font-weight: 600;">Company</h4>
                <ul style="list-style: none; padding: 0; line-height: 1.8;">
                    <li><a href="#" style="color: white; text-decoration: none;">About Us</a></li>
                    <li><a href="#" style="color: white; text-decoration: none;">Careers</a></li>
                    <li><a href="#" style="color: white; text-decoration: none;">Sustainability</a></li>
                </ul>
            </div>

            <div>
                <h4 style="font-weight: 600;">Destinations</h4>
                <ul style="list-style: none; padding: 0; line-height: 1.8;">
                    <li><a href="#" style="color: white; text-decoration: none;">Manila</a></li>
                    <li><a href="#" style="color: white; text-decoration: none;">Pasay City</a></li>
                    <li><a href="#" style="color: white; text-decoration: none;">Quezon City</a></li>
                    <li><a href="#" style="color: white; text-decoration: none;">Taguig</a></li>
                </ul>
            </div>

            <div>
                <h4 style="font-weight: 600;">Join Our Newsletter</h4>
                <form style="margin-top: 10px;">
                    <input type="email" placeholder="Your email" required
                           style="padding: 8px 10px; border-radius: 6px; border: none; outline: none; width: 180px;">
                    <button type="submit"
                            style="padding: 8px 15px; margin-left: 5px; border: none; border-radius: 6px; background-color: #A6C437; color: white; cursor: pointer;">
                        Subscribe
                    </button>
                    <p style="font-size: 12px; color: #ccc; margin-top: 8px;">* We’ll send you weekly updates for your better travel packages.</p>
                </form>
            </div>
        </div>
    </footer>
</main>
