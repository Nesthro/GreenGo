<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GreenGo</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @RenderSection("styles", required: false)

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', 'Segoe UI', sans-serif;
            background: #ffffff;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* ===== HEADER ===== */
        .header {
            background: #fff;
            padding: 12px 40px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 1px 4px rgba(0, 0, 0, 0.05);
        }

        .left-section {
            display: flex;
            align-items: center;
            gap: 40px;
        }

        .logo-section {
            display: flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
        }

        .logo {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
        }

        .logo-text {
            font-size: 22px;
            font-weight: 600;
            color: #2A4020;
        }

        .search-bar {
            display: flex;
            align-items: center;
            background: #f0f0f0;
            border-radius: 30px;
            padding: 8px 16px;
            width: 360px;
            gap: 8px;
        }

        .search-bar input {
            border: none;
            background: transparent;
            outline: none;
            width: 100%;
            color: #333;
            font-size: 14px;
        }

        .search-icon {
            color: #666;
            font-size: 14px;
        }

        .nav-menu {
            display: flex;
            gap: 32px;
            align-items: center;
        }

        .nav-link {
            text-decoration: none;
            color: #444;
            font-size: 14px;
            font-weight: 500;
            transition: color 0.3s;
        }

        .nav-link:hover {
            color: #8fb91c;
        }

        /* Authentication Buttons */
        .auth-buttons {
            display: flex;
            gap: 12px;
            align-items: center;
        }

        .user-profile {
            display: none; /* Hidden by default */
        }

        .btn-signup-header {
            border: 1.5px solid #8fb91c;
            color: #8fb91c;
            background: #fff;
            padding: 8px 22px;
            border-radius: 25px;
            font-weight: 600;
            font-size: 15px;
            text-decoration: none;
            transition: 0.3s;
        }

        .btn-signup-header:hover {
            background: #8fb91c;
            color: #fff;
        }

        .btn-login-header {
            background: #8fb91c;
            color: white;
            padding: 8px 24px;
            border-radius: 25px;
            text-decoration: none;
            font-weight: 600;
            font-size: 15px;
            transition: 0.3s;
        }

        .btn-login-header:hover {
            background: #7da619;
        }

        /* ===== MAIN CONTENT ===== */
        .body-content {
            flex: 1;
        }

        /* Updated Dropdown Styles */
        .user-dropdown {
            position: absolute;
            top: 100%;
            right: 40px;
            margin-top: 12px;
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            min-width: 220px;
            display: none;
            z-index: 1000;
            border: 1px solid #eee;
        }

        .user-dropdown.visible {
            display: block;
        }

        .dropdown-item {
            padding: 12px 16px;
            color: #444;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 12px;
            transition: all 0.3s;
        }

        .dropdown-item:first-child {
            border-radius: 12px 12px 0 0;
        }

        .dropdown-item:last-child {
            border-radius: 0 0 12px 12px;
        }

        .dropdown-item:hover {
            background: #f8f9fa;
        }

        .dropdown-item i {
            width: 20px;
            color: #666;
            font-size: 14px;
        }

        .dropdown-item span {
            flex: 1;
            font-size: 14px;
            font-weight: 500;
        }

        .dropdown-item .arrow-icon {
            color: #ccc;
            font-size: 12px;
        }

        .dropdown-separator {
            height: 1px;
            background: #eee;
        }
    </style>
</head>
<body>
    <!-- Navbar Header -->
    <div class="header">
        <div class="left-section">
            <div class="logo-section">
                <img src="~/Content/Images/logo.jpg" alt="GreenGo Logo" class="logo" />
                <span class="logo-text">GreenGo</span>
            </div>
            <div class="search-bar">
                <input type="text" placeholder="Search destinations or activities" />
                <i class="fa-solid fa-magnifying-glass search-icon"></i>
            </div>
        </div>
        <div class="nav-menu">
            <a href="@Url.Action("Home", "Home")" class="nav-link">Home</a>
            <a href="@Url.Action("Categories", "Home")" class="nav-link">Categories</a>
            <a href="@Url.Action("About", "Home")" class="nav-link">About Us</a>
            <a href="@Url.Action("Contact", "Home")" class="nav-link">Contact Us</a>
            <a href="@Url.Action("Tips", "Home")" class="nav-link">Tips</a>
            
            <!-- Auth Buttons (Show when logged out) -->
            <div class="auth-buttons" id="authButtons">
                <a href="@Url.Action("Register", "Account")" class="btn-signup-header">Sign Up</a>
                <a href="@Url.Action("Login", "Account")" class="btn-login-header">Log In</a>
            </div>

            <!-- User Profile (Show when logged in) -->
            <div class="user-profile" id="userProfile">
                <div class="user-icon" id="userMenuToggle" tabindex="0" style="cursor:pointer;">
                    <i class="fa-solid fa-user"></i>
                </div>
                <div class="user-dropdown" id="userDropdownMenu">
                    <a href="@Url.Action("Profile", "UserProfile")" class="dropdown-item">
                        <i class="fa-regular fa-user"></i>
                        <span>Profile</span>
                    </a>
                    <div class="dropdown-separator"></div>
                    <a href="#" class="dropdown-item" id="logoutButton">
                        <i class="fa-regular fa-arrow-right-from-bracket"></i>
                        <span>Sign out</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            checkAuthState();

            // Toggle user dropdown on click and keyboard
            const userMenuToggle = document.getElementById('userMenuToggle');
            const userDropdown = document.getElementById('userDropdownMenu');

            function toggleDropdown(e) {
                e.stopPropagation();
                userDropdown.classList.toggle('visible');
            }

            userMenuToggle?.addEventListener('click', toggleDropdown);
            userMenuToggle?.addEventListener('keydown', function(e) {
                if (e.key === 'Enter' || e.key === ' ') {
                    toggleDropdown(e);
                }
            });

            // Close dropdown when clicking outside
            document.addEventListener('click', function () {
                userDropdown?.classList.remove('visible');
            });

            // Prevent closing when clicking inside dropdown
            userDropdown?.addEventListener('click', function(e) {
                e.stopPropagation();
            });

            // Handle logout
            document.getElementById('logoutButton')?.addEventListener('click', function (e) {
                e.preventDefault();
                logout();
            });
        });

        function checkAuthState() {
            const isLoggedIn = localStorage.getItem('isLoggedIn') === 'true';
            const authButtons = document.getElementById('authButtons');
            const userProfile = document.getElementById('userProfile');

            if (isLoggedIn) {
                authButtons.style.display = 'none';
                userProfile.style.display = 'block';
            } else {
                authButtons.style.display = 'flex';
                userProfile.style.display = 'none';
            }
        }

        function logout() {
            localStorage.removeItem('isLoggedIn');
            localStorage.removeItem('userEmail');
            window.location.href = '@Url.Action("Home", "Home")';
        }
    </script>
</body>
</html>