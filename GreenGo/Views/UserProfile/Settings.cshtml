@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Settings - GreenGo";
}
<div class="main-container">
    @Html.Partial("_UserProfileSidebar")
    <main class="main-content settings-main-content">
        <div class="settings-page-container">
            <h1 class="settings-title">Settings</h1>
            <div class="settings-section">
                <div class="settings-card">
                    <div class="settings-card-title">Change Password</div>
                    <div class="settings-card-desc">Create a strong password to keep your account secured.<br />Set password (8-20 characters with at least 1 number, 1 letter and 1 special symbol)</div>
                    <div class="settings-form-group">
                        <input type="password" class="settings-input" placeholder="Please enter your password" id="passwordInput" />
                        <span class="toggle-password" onclick="togglePassword('passwordInput', this)"><i class="fa fa-eye-slash"></i></span>
                    </div>
                    <div class="settings-form-group">
                        <input type="password" class="settings-input" placeholder="Confirm password" id="confirmPasswordInput" />
                        <span class="toggle-password" onclick="togglePassword('confirmPasswordInput', this)"><i class="fa fa-eye-slash"></i></span>
                    </div>
                    <button class="settings-save-btn">Save</button>
                </div>
                <div class="settings-card">
                    <div class="settings-card-title">Delete Account</div>
                    <div class="settings-card-desc">If you want to delete your account and any personal data on GreenGo.</div>
                    <button class="settings-delete-btn" onclick="openDeleteAccountModal()">Delete Account</button>
                </div>
            </div>
        </div>
    </main>
    <!-- Delete Account Modal -->
    <div class="modal-bg" id="deleteAccountModalBg" style="display:none;">
        <div class="modal-container delete-account-modal">
            <button class="modal-close" onclick="closeDeleteAccountModal()">&times;</button>
            <div class="modal-title">Delete Account</div>
            <div class="modal-delete-text">Are you sure you want to delete your account?</div>
            <div class="modal-actions">
                <button class="btn-cancel-delete" onclick="closeDeleteAccountModal()">No, Cancel</button>
                <button class="btn-delete-confirm" onclick="closeDeleteAccountModal()">Yes, Delete</button>
            </div>
        </div>
    </div>
</div>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
<style>
    .main-container { display: flex; }
    .main-content.settings-main-content {
        flex: 1;
        padding: 60px 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        min-height: 100vh;
    }
    .settings-page-container {
        width: 100%;
        max-width: 900px;
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        padding: 40px 36px 48px 36px;
        display: flex;
        flex-direction: column;
    }
    .settings-title {
        font-size: 28px;
        font-weight: 700;
        color: #2c2c2c;
        margin-bottom: 32px;
    }
    .settings-section {
        display: flex;
        flex-direction: column;
        gap: 28px;
    }
    .settings-card {
        border: 1.5px solid #222;
        border-radius: 14px;
        padding: 28px 28px 22px 28px;
        background: #fff;
        margin-bottom: 0;
        display: flex;
        flex-direction: column;
        gap: 18px;
    }
    .settings-card-title {
        font-size: 18px;
        font-weight: 600;
        color: #222;
        margin-bottom: 4px;
    }
    .settings-card-desc {
        font-size: 14px;
        color: #666;
        margin-bottom: 8px;
    }
    .settings-form-group {
        position: relative;
        margin-bottom: 10px;
    }
    .settings-input {
        width: 100%;
        padding: 12px 40px 12px 14px;
        border: 1px solid #ddd;
        border-radius: 8px;
        font-size: 15px;
        color: #333;
        background: #fafafa;
        outline: none;
    }
    .settings-input:focus {
        border-color: #8fb91c;
    }
    .toggle-password {
        position: absolute;
        right: 14px;
        top: 50%;
        transform: translateY(-50%);
        color: #aaa;
        font-size: 16px;
        cursor: pointer;
    }
    .settings-save-btn {
        padding: 10px 36px;
        border-radius: 8px;
        font-size: 15px;
        font-weight: 500;
        border: 1.5px solid #b7d88a;
        color: #7cb342;
        background: #fff;
        cursor: pointer;
        transition: 0.2s;
        margin-top: 8px;
        width: 120px;
    }
    .settings-save-btn:hover {
        background: #7cb342;
        color: #fff;
    }
    .settings-delete-btn {
        padding: 10px 36px;
        border-radius: 8px;
        font-size: 15px;
        font-weight: 500;
        border: 1.5px solid #e53935;
        color: #e53935;
        background: #fff;
        cursor: pointer;
        transition: 0.2s;
        width: 160px;
        margin-top: 8px;
    }
    .settings-delete-btn:hover {
        background: #e53935;
        color: #fff;
    }
    /* Modal */
    .modal-bg {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.18);
        z-index: 1000;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .modal-container.delete-account-modal {
        background: #fff;
        border-radius: 14px;
        padding: 36px 36px 28px 36px;
        max-width: 380px;
        width: 100%;
        box-shadow: 0 4px 32px rgba(0,0,0,0.10);
        position: relative;
        text-align: center;
    }
    .modal-title {
        font-size: 20px;
        font-weight: 700;
        margin-bottom: 12px;
        color: #222;
    }
    .modal-delete-text {
        font-size: 15px;
        color: #444;
        margin-bottom: 24px;
    }
    .modal-close {
        position: absolute;
        right: 18px;
        top: 18px;
        border: none;
        background: none;
        font-size: 22px;
        color: #222;
        cursor: pointer;
    }
    .modal-actions {
        display: flex;
        gap: 16px;
        justify-content: center;
    }
    .btn-cancel-delete {
        padding: 10px 28px;
        border-radius: 8px;
        font-size: 15px;
        font-weight: 500;
        border: 1.5px solid #222;
        background: #fff;
        color: #222;
        cursor: pointer;
        transition: 0.2s;
    }
    .btn-cancel-delete:hover {
        background: #eee;
    }
    .btn-delete-confirm {
        padding: 10px 28px;
        border-radius: 8px;
        font-size: 15px;
        font-weight: 500;
        border: 1.5px solid #e53935;
        background: #e53935;
        color: #fff;
        cursor: pointer;
        transition: 0.2s;
    }
    .btn-delete-confirm:hover {
        background: #b71c1c;
        border-color: #b71c1c;
    }
</style>
<script>
function togglePassword(inputId, iconElem) {
    var input = document.getElementById(inputId);
    if (input.type === 'password') {
        input.type = 'text';
        iconElem.innerHTML = '<i class="fa fa-eye"></i>';
    } else {
        input.type = 'password';
        iconElem.innerHTML = '<i class="fa fa-eye-slash"></i>';
    }
}
function openDeleteAccountModal() {
    document.getElementById('deleteAccountModalBg').style.display = 'flex';
}
function closeDeleteAccountModal() {
    document.getElementById('deleteAccountModalBg').style.display = 'none';
}
</script>